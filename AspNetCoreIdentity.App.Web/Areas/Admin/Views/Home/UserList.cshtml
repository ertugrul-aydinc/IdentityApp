@model List<AdminModel.UserVM>

@{
    ViewData["Title"] = "UserList";
}

<h1>User List</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Role Operations</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <user-role-names user-id="@user.Id"></user-role-names>
                </td>
                <td>
                    <a asp-controller="Roles" asp-action="AssignRole" asp-route-id="@user.Id">Assign Role</a>
                </td>
            </tr>
        }

    </tbody>
</table>
