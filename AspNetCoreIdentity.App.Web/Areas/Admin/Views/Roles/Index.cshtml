@model List<AdminModel.RoleVM>

@{
    ViewData["Title"] = "Index";
}



<div class="row">

    <div class="col-md-6 offset-md-2">
        <h2>Role List</h2>
    </div>
    <div class="col-md-2">
        <a class="btn btn-primary" asp-controller="Roles" asp-action="AddRole" asp-area="Admin">Add Role</a>
    </div>
</div>

<div class="row">

    <div class="col-md-8 offset-md-2">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }
 
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Role Name</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>

                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="Roles" asp-action="UpdateRole" asp-route-id="@role.Id">Update Role</a>

                            <a class="btn btn-danger btn-sm my-1" asp-area="Admin" asp-controller="Roles" asp-action="DeleteRole" asp-route-id="@role.Id">Delete Role</a>
                        </td>
                            
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>



