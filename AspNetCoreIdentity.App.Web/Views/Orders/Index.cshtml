@using Microsoft.AspNetCore.Authorization;
@inject IAuthorizationService authorizateionService


@{
    ViewData["Title"] = "Index";
}

@if (authorizateionService.AuthorizeAsync(User, "Permission.Order.Read").Result.Succeeded)
{
    <button class="btn btn-primary">Permission.Order.Read</button>
}

@if (authorizateionService.AuthorizeAsync(User, "Permission.Order.Delete").Result.Succeeded)
{
    <button class="btn btn-primary">Permission.Order.Delete</button>
}

@if (authorizateionService.AuthorizeAsync(User, "Permission.Stock.Delete").Result.Succeeded)
{
    <button class="btn btn-primary">Permission.Stock.Delete</button>
}
