@model SignInVM
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@{
    ViewData["Title"] = "SignIn";
}




<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Sign In</h2>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-route-returnurl="@Context.Request.Query["returnUrl"]" asp-controller="Home" asp-action="SignIn" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input type="email" class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="row">

                <div class="col-md-6">

                    <div class="mb-3 form-check">
                        <label for="RememberMe" asp-for="RememberMe" class="form-check-label">Remember Me</label>
                        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                    </div>
                    

                </div>

                <div class="col-md-6">

                    <a class="btn btn-outline-secondary btn-sm float-end" asp-controller="Home" asp-action="ForgotPassword">Forgot my password</a>

                </div>

            </div>
                <button type="submit" class="btn btn-primary">Sign In</button>

               
            
        </form>
    </div>
</div>


